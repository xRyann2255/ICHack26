    ($xMax $yMin $zMin)
    ($xMax $yMax $zMin)
    ($xMin $yMax $zMin)
    ($xMin $yMin $zMax)
    ($xMax $yMin $zMax)
    ($xMax $yMax $zMax)
    ($xMin $yMax $zMax)
);

blocks
(
    // Target ~20m cells: 2227/20=111, 2193/20=110, 307/20=15
    hex (0 1 2 3 4 5 6 7) (110 110 15) simpleGrading (1 1 1)
);

